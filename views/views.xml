<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="employe1.list">
      <field name="name">employe1 list</field>
      <field name="model">employe1.employee</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="gender"/>
          <field name="phone"/>
          <field name="dept"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="employe1_action_window">
      <field name="name">employe1 window</field>
      <field name="res_model">employe1.employee</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
    
    <!-- Top menu item -->

    <menuitem name="employe1" id="employe1_menu_root"/>

    <!-- menu categories -->

    <menuitem name="employee" id="employe1-menu_1" parent="employe1_menu_root"/>
    <menuitem name="department" id="employe1_menu_2" parent="employe1-menu_root"/>

    <!-- actions -->

    <menuitem name="employee" id="employe1.menu_1_list" parent="employe1_menu_1"
              action="employe1.action_window"/>
    
    

  </data>
</odoo>
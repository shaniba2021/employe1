<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="department_list">
      <field name="name">department list</field>
      <field name="model">employe1.department</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="depno"/>
          <field name="empname"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="department_action_window">
      <field name="name">department window</field>
      <field name="res_model">employe1.department</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->



    <!-- Top menu item -->

    <menuitem name="department" id="department_menu_root"/>

    <!-- menu categories -->

    <menuitem name="department" id="department_menu_1" parent="department_menu_root"/>
    <menuitem name="department" id="department_menu_2" parent="department_menu_root"/>

    <!-- actions -->

    <menuitem name="department" id="department_menu_1_list" parent="department_menu_1"
              action="department_action_window"/>
    
    

  </data>
</odoo>